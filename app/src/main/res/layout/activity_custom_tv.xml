<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="40dp"
    tools:context=".CustomTV">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="40dp"
        android:textSize="40dp"
        android:textStyle="bold"
        android:shadowColor="#FF0000"
        android:shadowDx="-40"
        android:shadowDy="-40"
        android:shadowRadius="1"
        android:text="Student Diary" />

    <Button
        android:id="@+id/bChangeColor"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:padding="10sp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#60B8C7"
        android:textStyle="bold"
        android:textColor="#111222"
        android:text="Change color" />

    <Button
        android:id="@+id/bShadow"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:padding="10sp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#60B8C7"
        android:textStyle="bold"
        android:textColor="#111222"
        android:text="Moving shadow" />

    <Button
        android:id="@+id/bBlink"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:padding="10sp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#60B8C7"
        android:textStyle="bold"
        android:textColor="#111222"
        android:text="Text blink" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textSize="15dp"
        android:layout_marginBottom="20dp"
        android:background="#FFFFF0"
        android:padding="10dp" />

    <SeekBar
        android:id="@+id/sbTextSize"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bPrev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:text="Prev" />

        <Button
            android:id="@+id/bNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next" />
    </LinearLayout>
</LinearLayout>